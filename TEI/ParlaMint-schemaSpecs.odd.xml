<?xml version="1.0" encoding="UTF-8"?>
<!-- ODD schema specifications for ParlaMint corpora -->
<schemaSpec xmlns="http://www.tei-c.org/ns/1.0"
            xmlns:eg="http://www.tei-c.org/ns/Examples"
            xmlns:egXML="http://www.tei-c.org/ns/Examples"
            xmlns:sch="http://purl.oclc.org/dsdl/schematron"
            ident="parlamint"
            start="TEI teiCorpus"
            prefix="tei_"
            docLang="en"
            xml:lang="en">
  
  <!-- The elements used in ParlaMint: -->
   <moduleRef key="tei"/>
   <moduleRef key="core"
              include="bibl date desc email gap graphic head label measure media meeting name note num p pb pubPlace publisher ref resp respStmt teiCorpus term time title unit"/>
   <moduleRef key="header"
              include="appInfo application availability catDesc catRef category change classDecl correction edition editionStmt editorialDecl encodingDesc extent fileDesc funder hyphenation idno langUsage language licence listPrefixDef namespace normalization prefixDef profileDesc projectDesc publicationStmt quotation revisionDesc segmentation sourceDesc tagUsage tagsDecl taxonomy teiHeader textClass titleStmt"/>
   <moduleRef key="textstructure" include="TEI body div text"/>
   <moduleRef key="corpus" include="particDesc setting settingDesc"/>
   <moduleRef key="spoken"
              include="equipment incident kinesic recording recordingStmt u vocal"/>
   <moduleRef key="namesdates"
              include="addName affiliation birth death education event forename listEvent listOrg listPerson listRelation nameLink occupation org orgName persName person placeName relation roleName sex surname"/>
   <!-- Removed ab, as it is not use - but does appear in the ParlaMint RelaxNG! -->
   <moduleRef key="linking" include="link linkGrp seg"/>
   <moduleRef key="figures" include="figure"/>
   <moduleRef key="analysis" include="pc s w"/>
   <!-- The attributes used in ParlaMint: -->
   <classRef key="att.anchoring" include=""/>
   <classRef key="att.cReferencing" include=""/>
   <classRef key="att.datable" include=""/>
   <classRef key="att.datable.custom" include=""/>
   <classRef key="att.datable.iso" include=""/>
   <classRef key="att.datcat" include=""/>
   <classRef key="att.declarable" include=""/>
   <classRef key="att.declaring" include=""/>
   <classRef key="att.dimensions" include=""/>
   <classRef key="att.divLike" include=""/>
   <classRef key="att.docStatus" include=""/>
   <!--classRef key="att.duration" include=""/-->
   <classRef key="att.duration.iso" include=""/>
   <!--classRef key="att.duration.w3c" include=""/-->
   <classRef key="att.editLike" include=""/>
   <classRef key="att.edition" include=""/>
   <!-- Why isn't u included in att.fragmentable? Issue to tei-c? -->
   <classRef key="att.fragmentable" include=""/>
   <!-- Cannot have xml: in include or except! -->
   <!--classRef key="att.global" include="xml:id xml:lang n"/-->
   <classRef key="att.global" except=""/>
   <classRef key="att.global.analytic" include="ana"/>
   <classRef key="att.global.linking" include="corresp synch next prev "/>
   <classRef key="att.global.rendition" include=""/>
   <classRef key="att.global.responsibility" include="resp"/>
   <classRef key="att.global.source" include="source"/>
   <classRef key="att.internetMedia" include="mimeType"/>
   <classRef key="att.lexicographic.normalized" include="norm"/>
   <classRef key="att.linguistic" include="lemma pos msd join"/>
   <classRef key="att.locatable" include=""/>
   <classRef key="att.measurement" include="unit quantity"/>
   <classRef key="att.media" include=""/>
   <classRef key="att.naming" include="role"/>
   <classRef key="att.notated" include=""/>
   <classRef key="att.patternReplacement" include="matchPattern replacementPattern"/>
   <classRef key="att.personal" include="full"/>
   <classRef key="att.placement" include=""/>
   <classRef key="att.pointing" include="target"/>
   <classRef key="att.pointing.group" include="targFunc"/>
   <classRef key="att.ranging" include=""/>
   <classRef key="att.resourced" include="url"/>
   <classRef key="att.segLike" include=""/>
   <classRef key="att.sortable" include=""/>
   <classRef key="att.spanning" include=""/>
   <classRef key="att.timed" include=""/>
   <classRef key="att.typed" include="type subtype"/>
   <classRef key="att.written" include=""/>
   <!-- Change element content models and attributes of elements -->
   <!-- We could also add:
	desc
	exemplum
	remarks
  -->
   <!-- Top level elements -->
   <elementSpec ident="teiCorpus" module="core" mode="change">
      <content>
         <elementRef key="teiHeader"/>
         <!-- We allow XIncludes in order to enable separate validation of corpus root -->
         <alternate minOccurs="1" maxOccurs="unbounded">
            <elementRef key="TEI"/>
            <elementRef key="include"/>
         </alternate>
      </content>
      <!-- Make @xml:id, @xml:lang required, remove the other attributes -->
      <attList>
         <attDef ident="xml:id" mode="replace" usage="req">
            <datatype>
               <dataRef name="ID"/>
            </datatype>
         </attDef>
         <attDef ident="xml:lang" mode="replace" usage="req">
            <datatype>
               <dataRef key="teidata.language"/>
            </datatype>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="n" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
      </attList>
   </elementSpec>
   <!-- Definition of XInclude -->
   <elementSpec ident="include" mode="add" ns="http://www.w3.org/2001/XInclude">
      <attList>
         <attDef ident="href" mode="add">
            <datatype>
               <dataRef key="teidata.pointer"/>
            </datatype>
         </attDef>
      </attList>
   </elementSpec>
   <elementSpec ident="TEI" module="textstructure" mode="change">
      <content>
         <elementRef key="teiHeader"/>
         <elementRef key="text"/>
      </content>
      <!-- Make @xml:id, @xml:lang and @ana required, remove the other attributes -->
      <attList>
         <attDef ident="xml:id" mode="replace" usage="req">
            <datatype>
               <dataRef name="ID"/>
            </datatype>
         </attDef>
         <attDef ident="xml:lang" mode="replace" usage="req">
            <datatype>
               <dataRef key="teidata.language"/>
            </datatype>
         </attDef>
         <attDef ident="ana" mode="replace" usage="req">
            <datatype maxOccurs="unbounded">
               <dataRef key="teidata.pointer"/>
            </datatype>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="n" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="version" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="text" module="textstructure" mode="change">
      <content>
         <elementRef key="body"/>
      </content>
      <!-- Remove attributes except for ana and optional xml:id, xml:lang, n, source -->
      <attList>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="body" module="textstructure" mode="change">
      <content>
         <elementRef key="div" minOccurs="1" maxOccurs="unbounded"/>
      </content>
      <!-- Remove all attributes -->
      <attList>
         <attDef ident="xml:id" mode="delete"/>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="n" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="div" module="textstructure" mode="change">
      <content>
         <elementRef key="head" minOccurs="0" maxOccurs="unbounded"/>
         <alternate minOccurs="1" maxOccurs="unbounded">
            <elementRef key="note"/>
            <elementRef key="vocal"/>
            <elementRef key="kinesic"/>
            <elementRef key="incident"/>
            <elementRef key="gap"/>
            <elementRef key="pb"/>
            <elementRef key="u"/>
         </alternate>
      </content>
      <!-- redefine type values, remove other attributes except xml:id, xml:lang, n, subtype -->
      <attList>
         <attDef ident="type" mode="replace" usage="rec">
            <valList type="closed">
               <valItem ident="debateSection">
                  <desc xml:lang="en">General purpose text division for all parts of
            parliamentary proceedings. 
	    If needed, the @subtype attribute can be used for
	    additional content classification.</desc>
               </valItem>
            </valList>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
      </attList>
   </elementSpec>
   <!-- Transcriber notes -->
   <elementSpec ident="note" mode="change" module="core">
      <content>
         <alternate minOccurs="0" maxOccurs="unbounded">
            <textNode/>
            <elementRef key="time"/>
         </alternate>
      </content>
      <!-- Redefine type values, remove other attributes except xml:id, xml:lang, n, subtype -->
      <attList><!-- @type needs work -->
         <attDef ident="type" mode="replace" usage="rec">
	<!-- These are note/@type values we have in 2.1:

           agendaItem, answer, articlesExam, articlesVoting, chair, comment, debate,
           description, discussion, document, error, finalVoting, generalDiscussion, link,
           musical_performance, notPassingPoposal, preliminaryExceptions,
           preliminarySuspensiveException, president, role, signing, speaker, status, summary,
           suspensiveExceptions, time, vote, vote-ayes, vote-noes, voteOfConfidence, voting

           Note that:
           - they should all be in camel-case (musical_performance, vote-ayes, vote-noes)
           - some should be changed (vote vs. voting)
           - some are probably too specfic (voting vs. articlesVoting, finalVoting)
	-->
            <valList type="open">
          <!-- AKN -->
               <valItem ident="narrative">
                  <desc xml:lang="en">Description in the third person of events taking place in the meeting, e.g. "Mr X. takes the Chair".</desc>
               </valItem>
               <valItem ident="summary">
                  <desc xml:lang="en">Summaries of speeches that are individually not interesting, e.g. "Question put and agreed to".</desc>
               </valItem>
               <!-- AKN and slovParl -->
               <valItem ident="speaker">
                  <desc xml:lang="en">Name, role and possible description of a person doing the speech</desc>
               </valItem>
               <valItem ident="vote">
                  <desc xml:lang="en">Outcome of a vote</desc>
               </valItem>
               <!-- slovParl -->
               <valItem ident="location">
                  <desc xml:lang="en">The location of the speaker, who was not on the podium</desc>
               </valItem>
               <valItem ident="date">
                  <desc xml:lang="en">Date of the session</desc>
               </valItem>
               <valItem ident="president">
                  <desc xml:lang="en">Chairman of a meeting</desc>
               </valItem>
               <valItem ident="comment">
                  <desc xml:lang="en">Comment of parliamentary reporter</desc>
               </valItem>
               <valItem ident="time">
                  <desc xml:lang="en">Date and time of the beginning and end of the debate</desc>
               </valItem>
               <valItem ident="quorum">
                  <desc xml:lang="en">The presence of the members of parliament</desc>
               </valItem>
               <valItem ident="debate">
                  <desc xml:lang="en">Comments on the conduct of debates</desc>
               </valItem>
            </valList>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="vocal" module="spoken" mode="change">
      <content>
         <elementRef key="desc"/>
      </content>
      <!-- Redefine type values, remove other attributes except xml:id, xml:lang, n, who, subtype -->
      <attList>
         <attDef ident="type" mode="replace" usage="rec">
            <valList type="closed">
               <valItem ident="greeting"/>
               <valItem ident="question"/>
               <valItem ident="clarification"/>
               <valItem ident="speaking"/>
               <valItem ident="interruption"/>
               <valItem ident="exclamat"/>
               <valItem ident="laughter"/>
               <valItem ident="shouting"/>
               <valItem ident="murmuring"/>
               <valItem ident="noise"/>
               <valItem ident="signal"/>
            </valList>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="dur" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="kinesic" module="spoken" mode="change">
      <content>
         <elementRef key="desc"/>
      </content>
      <!-- Redefine type values, remove others attributes except xml:id, xml:lang, n, who, subtype -->
      <attList>
         <attDef ident="type" mode="replace" usage="rec">
            <valList type="closed">
               <valItem ident="kinesic"/>
               <valItem ident="applause"/>
               <valItem ident="ringing"/>
               <valItem ident="signal"/>
               <valItem ident="playback"/>
               <valItem ident="gesture"/>
               <valItem ident="smiling"/>
               <valItem ident="laughter"/>
               <valItem ident="snapping"/>
               <valItem ident="noise"/>
            </valList>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="dur" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="incident" module="spoken" mode="change">
      <content>
         <elementRef key="desc"/>
      </content>
      <!-- Redefine type values, remove others attributes except xml:id, xml:lang, n, who, subtype -->
      <attList>
         <attDef ident="type" mode="replace" usage="rec">
            <valList type="closed">
               <valItem ident="action"/>
               <valItem ident="incident"/>
               <valItem ident="leaving"/>
               <valItem ident="entering"/>
               <valItem ident="break"/>
               <valItem ident="sound"/>
               <valItem ident="editorial"/>
            </valList>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="dur" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="gap" module="core" mode="change">
      <content>
         <elementRef key="desc"/>
      </content>
      <!-- Remove all except @reason and specify its values -->
      <attList>
         <attDef ident="reason" mode="replace" usage="rec">
            <valList type="closed">
               <valItem ident="inaudible"/>
               <valItem ident="editorial"/>
            </valList>
         </attDef>
         <attDef ident="xml:id" mode="delete"/>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="n" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="dur" mode="delete"/>
      </attList>
   </elementSpec>
   <!-- <desc> appears in taxonomy, application and incidents -->
   <elementSpec ident="desc" module="core" mode="change">
      <content>
         <sequence>
            <elementRef minOccurs="0" key="term"/>
            <alternate minOccurs="1" maxOccurs="unbounded">
               <textNode/>
               <elementRef key="ref"/>
            </alternate>
         </sequence>
      </content>
      <!-- Remove all except optional xml:lang -->
      <attList>
         <attDef ident="xml:id" mode="delete"/>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="n" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="u" module="spoken" mode="change">
      <content>
         <alternate minOccurs="1" maxOccurs="unbounded">
            <elementRef key="note"/>
            <elementRef key="vocal"/>
            <elementRef key="kinesic"/>
            <elementRef key="incident"/>
            <elementRef key="gap"/>
            <elementRef key="pb"/>
            <elementRef key="seg"/>
         </alternate>
      </content>
      <!-- Remove all except optional xml:id, xml:lang, n, prev, next, who, ana, source  -->
      <attList>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="dur" mode="delete"/>
         <attDef ident="toWhom" mode="delete"/>
         <attDef ident="trans" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="seg" module="linking" mode="change">
      <content>
         <alternate minOccurs="1" maxOccurs="unbounded">
            <elementRef key="note"/>
            <elementRef key="vocal"/>
            <elementRef key="kinesic"/>
            <elementRef key="incident"/>
            <elementRef key="gap"/>
            <elementRef key="pb"/>
            <!-- Not ideal, as text and <s> can be mixed -->
            <alternate minOccurs="0" maxOccurs="unbounded">
               <textNode/>
               <elementRef key="s"/>
            </alternate>
         </alternate>
      </content>
      <!-- Remove all except optional xml:id, xml:lang, n -->
      <attList>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
      </attList>
   </elementSpec>
   <!-- Linguistic elements for ParlaMint.ana -->
   <elementSpec ident="s" module="analysis" mode="change">
      <content>
         <alternate minOccurs="1" maxOccurs="unbounded">
            <elementRef key="w"/>
            <elementRef key="pc"/>
            <elementRef key="name"/>
            <elementRef key="num"/>
            <elementRef key="date"/>
            <elementRef key="time"/>
            <elementRef key="note"/>
            <elementRef key="vocal"/>
            <elementRef key="kinesic"/>
            <elementRef key="incident"/>
            <elementRef key="gap"/>
         </alternate>
         <elementRef key="linkGrp"/>
      </content>
      <!-- Remove all except optional xml:id, xml:lang, n -->
      <attList>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
      </attList>
   </elementSpec>
   <!-- Not ideal, more contrains can be put on surface vs. syntactic word -->
   <elementSpec ident="w" module="analysis" mode="change">
      <content>
         <alternate minOccurs="1" maxOccurs="unbounded">
            <textNode/>
            <elementRef key="w"/>
         </alternate>
      </content>
      <!-- Remove attributes except for xml:id, msd, lemma, xml:lang, norm, join, ana, pos -->
      <!-- Cannot make any attributes obligatory, because of surface words -->
      <attList>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="pc" module="analysis" mode="change">
      <content>
         <textNode/>
      </content>
      <!-- Make xml:id, msd obligatory, 
	 remove other attributes except xml:lang, norm, join, ana, pos -->
      <attList>
         <attDef ident="xml:id" mode="replace" usage="req">
            <datatype>
               <dataRef name="ID"/>
            </datatype>
         </attDef>
         <attDef ident="msd" mode="replace" usage="req">
            <datatype>
               <dataRef key="teidata.text"/>
            </datatype>
         </attDef>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="type" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="linkGrp" module="linking" mode="change">
      <content>
         <elementRef maxOccurs="unbounded" key="link"/>
      </content>
      <!-- Narrow down targFunc and type values, remove all other attributes -->
      <attList>
         <attDef ident="targFunc" mode="replace" usage="req">
            <valList type="closed">
               <valItem ident="head argument"/>
            </valList>
         </attDef>
         <attDef ident="type" mode="replace" usage="req">
            <valList type="closed">
               <valItem ident="UD-SYN"/>
            </valList>
         </attDef>
         <attDef ident="xml:id" mode="delete"/>
         <attDef ident="xml:space" mode="delete"/>
         <attDef ident="xml:base" mode="delete"/>
         <attDef ident="n" mode="delete"/>
         <attDef ident="corresp" mode="delete"/>
         <attDef ident="synch" mode="delete"/>
         <attDef ident="next" mode="delete"/>
         <attDef ident="prev" mode="delete"/>
         <attDef ident="ana" mode="delete"/>
         <attDef ident="resp" mode="delete"/>
         <attDef ident="source" mode="delete"/>
         <attDef ident="target" mode="delete"/>
         <attDef ident="subtype" mode="delete"/>
      </attList>
   </elementSpec>
   <elementSpec ident="link" module="linking" mode="change">
    <!-- Make ana, target obligatory, remove all other attributes -->
      <attList>
